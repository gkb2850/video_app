.nav_header_container {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 18rpx 0;
}
.nav_header_container .nav_left_box .index_left_icon {
  width: 88rpx;
  height: 58rpx;
  display: block;
  margin-right: 34rpx;
}
.nav_header_container .search_box {
  position: relative;
  background: -webkit-linear-gradient(left, #F3F3F3 0%, #F8F8F8 100%);
  background: linear-gradient(90deg, #F3F3F3 0%, #F8F8F8 100%);
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 34rpx;
  padding: 0 86rpx 0 24rpx;
  box-sizing: border-box;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  overflow: hidden;
}
.nav_header_container .search_box input {
  width: 100%;
  height: 100%;
  line-height: 60rpx;
  outline: none;
  border: none;
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
}
.nav_header_container .search_box image {
  position: absolute;
  right: 24rpx;
  top: 50%;
  width: 38rpx;
  height: 38rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.nav_header_container .nav_right_box {
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 60rpx;
}
.nav_header_container .nav_right_box .nav_bar_r_icon {
  width: 38rpx;
  height: 38rpx;
  display: block;
}
.nav_header_container .nav_right_box .nav_bar_r_icon:first-child {
  margin-right: 28rpx;
}
.nav_header_container .nav_right_box .nav_bar_r_icon:last-child {
  margin-right: 24rpx;
}

